{
  "extends": ["@solved-contact/tsconfig/base.json"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    },
    "outDir": "./dist",
    "types": ["node"]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["node_modules", "build", "dist"]
}
